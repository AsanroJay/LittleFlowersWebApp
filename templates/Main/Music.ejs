    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <title>Music Programs</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="css/main-style.css">
</head>

<body>

  <%- include('../partials/main-navbar'); %>

    <!-- Main Content -->
    <main class="container mt-5 mb-0 pt-5 pt-0">
      <section class="mb-5">
        <div class="row mb-5">
          <div class="col-12">

            <h1 class="mb-4" style="color: rgb(207, 92, 128);">Music Programs</h1>

            <img src="assets/music-header.png" alt="Students enjoying music class" class="img-fluid w-100 mb-4">

            <p class="lead">Little Flowers offers individual instruction in voice, piano, guitar, and music theory. Our
              curriculum engages students to ensure both learning and enjoyment.</p>
            <p class="lead">Our program is aligned with international standards of music education. Individual
              instruction is at the heart of our Music Program and is available to children from beginners to advanced
              students.</p>
            <p class="lead">Our professional faculty members are dedicated to making each child's experience stimulating
              and fun. Our private lessons ensure that your child receives personalized attention and expert guidance as
              they develop their musicality.</p>
          </div>
        </div>
      </section>

      <section class="mb-5">
        <div class="row">
          <div class="col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
              <img src="assets/guitar-program.png" class="card-img-top" alt="Voice program students">
              <div class="card-body">
                <h2 class="card-title" style="color: rgb(207, 92, 128);">The Voice Program</h2>
                <p class="lead">Our primary emphasis is on the mastery of singing technique. We follow the "essential
                  singing" technique and show our students to become confident and expressive vocal performers.</p>
                <p class="lead">Students will learn proper breathing, tone production, diction, and performance skills
                  through a variety of musical styles.</p>
              </div>
            </div>
          </div>

          <div class="col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
              <img src="assets/guitar-program.png" class="card-img-top" alt="Piano program students">
              <div class="card-body">
                <h2 class="card-title" style="color: rgb(207, 92, 128);">The Piano Program</h2>
                <p class="lead">Our piano program provides a strong foundation in piano skills and a pathway for
                  progressive study in piano.</p>
                <p class="lead">Each session is carefully structured to include technical exercises, theory building,
                  sight-reading, and repertoire development.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
              <img src="assets/guitar-program.png" class="card-img-top" alt="Guitar program students">
              <div class="card-body">
                <h2 class="card-title" style="color: rgb(207, 92, 128);">Guitar Program</h2>
                <p class="lead">Our guitar program offers comprehensive training in both classical and contemporary
                  guitar techniques.</p>
                <p class="lead">Students will learn proper hand positioning, chord progressions, fingerstyle techniques,
                  and music theory as applied to the guitar.</p>
              </div>
            </div>
          </div>

          <div class="col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
              <img src="assets/music-theory.png" class="card-img-top" alt="Music theory class">
              <div class="card-body">
                <h2 class="card-title" style="color: rgb(207, 92, 128);">Music Theory</h2>
                <p class="lead">Our music theory program provides the foundation for understanding the language of
                  music.</p>
                <p class="lead">Students will learn notation, rhythm, harmony, ear training, and composition skills that
                  will enhance their performance abilities.</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Contact Section Anchor Point -->
    <div id="Contact"></div>

    <%- include('../partials/foot-bar'); %>


