<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Article - Medium Style</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="createArticle.css">
</head>
<body>
    <!-- Save Draft Confirmation Modal -->
    <div class="modal fade" id="saveDraftModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Save Draft?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Do you want to save your article as a draft before leaving?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Don't Save</button>
                    <button type="button" class="btn btn-primary" id="confirmSaveDraft">Save Draft</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Publish Preview Modal -->
    <div class="modal fade" id="publishModal" tabindex="-1">
        <div class="modal-dialog modal-lg"> 
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Story Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="story-preview">
                        <div class="preview-image-container">
                            <div id="previewImage" class="preview-image-placeholder">
                                <i class="fas fa-image"></i>
                                <p>No image selected</p>
                            </div>
                        </div>
                        <div class="preview-content">
                            <h3 id="previewTitle">Article Title</h3>
                            <p id="previewAuthor">By Author</p>
                            <div id="previewExcerpt" class="preview-excerpt"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmPublish">Publish Now</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Container -->
    <div class="container-fluid">
        <!-- Header -->
        <header class="header d-flex justify-content-between align-items-center py-3 border-bottom">
            <button class="btn btn-outline-secondary back-btn" id="backBtn">
                <i class="fas fa-arrow-left me-2"></i>Back
            </button>
            <div class="header-actions">
                <button class="btn btn-outline-primary me-2" id="draftBtn">
                    <i class="fas fa-save me-1"></i>Save Draft
                </button>
                <button class="btn btn-success" id="publishBtn">
                    <i class="fas fa-paper-plane me-1"></i>Publish
                </button>
            </div>
        </header>

        <!-- Editor -->
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="editor py-4">
                    <!-- Title Block -->
                    <div class="title-block mb-4">
                        <input type="text" id="titleInput" placeholder="Title" class="form-control title-input mb-3">
                        <input type="text" id="authorInput" placeholder="Author" class="form-control author-input">
                    </div>

                    <!-- Content Blocks -->
                    <div id="contentBlocks">
                        <!-- Dynamic content blocks will be added here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Formatting Toolbar (Hidden by default) -->
    <div id="formatToolbar" class="format-toolbar">
        <button type="button" class="btn btn-sm btn-outline-secondary" data-command="bold" title="Bold">
            <i class="fas fa-bold"></i>
        </button>
        <button type="button" class="btn btn-sm btn-outline-secondary" data-command="italic" title="Italic">
            <i class="fas fa-italic"></i>
        </button>
        <button type="button" class="btn btn-sm btn-outline-secondary" id="linkBtn" title="Insert Link">
            <i class="fas fa-link"></i>
        </button>
    </div>

    <!-- Hidden file input for image uploads -->
    <input type="file" id="imageInput" accept="image/*" style="display: none;">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="createArticle.js"></script>
</body>
</html>