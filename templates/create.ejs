<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complete Editor with Right-Side Drag</title>
    <link rel="stylesheet" href="css/create.css">
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script src="js/create.js" defer></script>
</head>
<body>
    <div class="editor-wrapper">
        <div class="editor-interface">
            <!-- Toolbar -->
            <div class="toolbar">
                <!-- Text Section -->
                <div class="toolbar-section">
                    <div class="undo-redo-buttons">
                        <button class="format-btn" title="Undo" onclick="document.execCommand('undo', false, null);">
                            <img src="assets/undo-icon.png" alt="Undo" class="toolbar-icon">
                        </button>
                        <button class="format-btn" title="Redo" onclick="document.execCommand('redo', false, null);">
                            <img src="assets/redo-icon.png" alt="Redo" class="toolbar-icon">
                        </button>
                    </div>
                    <div class="section-label">Text</div>
                    
                    <div class="format-buttons">
                        <button class="format-btn" title="Bold" onclick="document.execCommand('bold', false, null);">
                            <img src="assets/bold.png" alt="Bold" class="toolbar-icon">
                        </button>
                        <button class="format-btn" title="Italic" onclick="document.execCommand('italic', false, null);">
                            <img src="assets/italic.png" alt="Italic" class="toolbar-icon">
                        </button>
                        <button class="format-btn" title="Underline" onclick="document.execCommand('underline', false, null);">
                            <img src="assets/underline.png" alt="Underline" class="toolbar-icon">
                        </button>
                    </div>
                </div>
                
                <!-- Alignment Section -->
                <div class="toolbar-section">
                    <div class="section-label">Alignment</div>
                    <div class="format-buttons">
                        <button class="format-btn" title="Align Left" onclick="setTextAlign('left')">
                            <img src="assets/center-left.png" alt="Left" class="toolbar-icon">
                        </button>
                        <button class="format-btn" title="Center" onclick="setTextAlign('center')">
                            <img src="assets/center-middle.png" alt="Center" class="toolbar-icon">
                        </button>
                        <button class="format-btn" title="Align Right" onclick="setTextAlign('right')">
                            <img src="assets/center-right.png" alt="Right" class="toolbar-icon">
                        </button>
                        <button class="format-btn" title="Justify" onclick="setTextAlign('justify')">
                            <img src="assets/center-spaced.png" alt="Justify" class="toolbar-icon">
                        </button>
                    </div>
                </div>
                
                <!-- Insert Section -->
                <div class="toolbar-section">
                    <div class="section-label">Insert</div>
                    <div class="format-buttons">
                        <button class="format-btn" title="Insert Image" onclick="insertImage()">
                            <img src="assets/image.png" alt="Image" class="toolbar-icon">
                        </button>
                        <button class="format-btn" title="Insert Link" onclick="insertLink()">
                            <img src="assets/link.png" alt="Link" class="toolbar-icon">
                        </button>
                    </div>
                </div>
                
                <!-- List Section -->
                <div class="toolbar-section">
                    <div class="section-label">List</div>
                    <div class="format-buttons">
                        <button class="format-btn" title="Bullet List" onclick="document.execCommand('insertUnorderedList', false, null);">
                            <img src="assets/list-dotted.png" alt="Bullets" class="toolbar-icon">
                        </button>
                        <button class="format-btn" title="Numbered List" onclick="document.execCommand('insertOrderedList', false, null);">
                            <img src="assets/list-numbered.png" alt="Numbers" class="toolbar-icon">
                        </button>
                        <button class="format-btn" title="Checklist" onclick="insertChecklist()">
                            <img src="assets/list-mixed.png" alt="Checklist" class="toolbar-icon">
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Pages Container -->
            <div class="pages-container" id="pagesContainer">
                <!-- Page with external drag handle -->
                <div class="page-with-handle">
                    <div class="page-editor">
                        <div class="page-content" contenteditable="true">
                            Start editing here...
                        </div>
                    </div>
                    <div class="drag-handle" title="Drag to reorder">â‰¡</div>
                </div>
            </div>
        </div>
        
        <!-- Add Page Button -->
        <div class="add-page-container">
            <button class="add-page-btn">+</button>
        </div>
        
        <!-- Action Buttons -->
        <div class="action-buttons">
            <button class="action-button draft">Draft</button>
            <button class="action-button post">Post</button>
        </div>
    </div>
</body>
</html>